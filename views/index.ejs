<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>

    <link
      href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Lato:wght@100&family=Ubuntu:wght@300;500&display=swap"
      rel="stylesheet"
    />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <script
      src="https://kit.fontawesome.com/ca33be108d.js"
      crossorigin="anonymous"
    ></script>

    <link rel="stylesheet" href="/style.css" />

    <!--no need to set ../public , because it is already set-->
  </head>
  <body>
    <section class="todo-container">
      <h1>My Task Application</h1>
      <section class="todo">
        <div class="new-task">
          <h3>Add a new task</h3>
          <form method="POST" action="/" class="todo-header">
            <input type="text" name="title" placeholder="title" />
            <textarea
              rows="6"
              cols="10"
              name="content"
              placeholder="content"
            ></textarea>
            <button type="submit">
              <span class="fas fa-plus">Add Task</span>
            </button>
          </form>
        </div>
        <div class="task-list">
          <h3>Task list</h3>
          <ul class="todo-list">
            <% todoTasks.forEach(item=> {%>
            <li class="todo-list-item">
              <div class="todo-list-item-title"><%= item.title %></div>
              <div class="todo-list-item-content"><%= item.content %></div>
              <a href="/edit/<%= item._id%>" class="edit"
                ><span class="fas fa-edit"></span
              ></a>
              <a href="/remove/<%= item._id%>" class="remove"
                ><span class="fas fa-times"></span
              ></a>
            </li>
            <% }) %>
          </ul>
        </div>
      </section>
    </section>
    <script src="index.js"></script>
  </body>
</html>
